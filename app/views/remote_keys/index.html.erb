<h1>Listing Remote Keys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>SSH Key</th>
    <th col_span="3">Actions</th>
  </tr>

<% @remote_keys.each do |remote_key| %>
  <tr>
    <td><%= link_to remote_key.name, remote_key_path(remote_key) %></td>
    <td><%= remote_key.ssh_key %></td>
    <td><%= link_to 'Destroy', remote_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Remote key', new_remote_key_path %>
