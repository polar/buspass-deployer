<H1>Remote Key</H1>

<table class="table table-bordered">
  <tbody>
  <tr>
    <th>Name</th>
    <td><%= @remote_key.name %></td>
  </tr>
  <tr>
    <th>SSH Key</th>
    <td><%= @remote_key.ssh_key %></td>
  </tr>
  </tbody>
</table>

<br />
<%= button_to "Delete", remote_key_path(@remote_key), :method => :delete, :confirm => "Are you sure?" %>

<%= link_to 'Keys', remote_keys_path %> |
<%= link_to 'Installations', installations_path %>  |
<%= link_to 'New Installation', new_installation_path %>
