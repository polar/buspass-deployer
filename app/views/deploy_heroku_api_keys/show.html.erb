<H1>Deploy Heroku API Key</H1>

<table class="table table-bordered">
  <tbody>
  <tr>
    <th>Name</th>
    <td><%= @deploy_heroku_api_key.name %></td>
  </tr>
  <tr>
    <th>Ecrypted Content</th>
    <td><%= @deploy_heroku_api_key.encrypt_key_content %></td>
  </tr>
  </tbody>
</table>

<br />
<%= button_to "Delete", deploy_heroku_api_key_path(@deploy_heroku_api_key), :method => :delete, :confirm => "Are you sure?" %>

<%= link_to 'Edit', edit_deploy_heroku_api_key_path(@deploy_heroku_api_key) %> |
<%= link_to 'Keys', deploy_heroku_api_keys_path %> |
<%= link_to 'Installations', installations_path %>  |
<%= link_to 'New Installation', new_installation_path %>
